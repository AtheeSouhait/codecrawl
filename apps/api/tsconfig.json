{
  "compilerOptions": {
    "rootDir": "./src",
    "lib": ["ES2022", "DOM"],

    // or higher
    "target": "ES2022",

    "module": "CommonJS",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "strictNullChecks": true,

    "inlineSources": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "coverage"]
}
